{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "basic": {
            "format": "%(asctime)s-%(name)s-%(levelname)s-%(message)s",
            "datefmt": "%H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "basic",
            "stream": "ext://sys.stdout"
        },

        "file_handler": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "run.log"
        },

        "file_handler_test": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "test.log"
        },

        "file_handler_train": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "train.log"
        }
    },

    "loggers": {
        "TEST": {
            "level": "DEBUG",
            "handlers": ["console", "file_handler_test"],
            "propagate": false
        },
        "TRAIN": {
            "level": "DEBUG",
            "handlers": ["console", "file_handler_train"],
            "propagate": false
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["console", "file_handler"]
    }
}